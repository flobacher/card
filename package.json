  "keywords": [
    "card",
    "npm",
    "npm card",
    "npx",
    "npx card",
    "business card"
  ],
  "author": "Flo Bacher <hello@flobacher.net> (https://flobacher.net)",
  "files": [
    "bin/card.js",
    "bin/output"
  ],
  "license": "MIT",
  "devDependencies": {
    "boxen": "^2.1.0",
    "chalk": "^2.4.1",
    "eslint": "^5.11.1",
    "eslint-config-prettier": "^3.3.0",
    "prettier": "^1.15.3"
  }
}

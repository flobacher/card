{
  "name": "flobacher",
  "version": "1.0.0",
  "description": "A personal card for Florian Bacher (@flobacher)",
  "main": "/bin/card.js",
  "bin": {
    "flobacher": "./bin/card.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flobacher/flobacher.git"
  },
  "scripts": {
    "prepublish": "npm run build",
